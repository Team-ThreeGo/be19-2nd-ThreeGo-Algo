<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.threego.algo.study.query.dao.StudyMemberMapper">

    <!-- 스터디 멤버 목록 조회용 매핑 -->
    <resultMap id="StudyMemberMap" type="com.threego.algo.study.query.dto.StudyMemberDTO">
        <id property="id" column="STUDY_MEMBER_ID"/>
        <result property="studyId" column="STUDY_ID"/>
        <result property="memberId" column="MEMBER_ID"/>
        <result property="memberNickname" column="STUDY_MEMBER_NICKNAME"/>
        <result property="memberRank" column="STUDY_MEMBER_RANK"/>
        <result property="role" column="STUDY_MEMBER_ROLE"/>
    </resultMap>

    <select id="selectAllStudyMember" parameterType="int" resultMap="StudyMemberMap">
        SELECT
            A.STUDY_ID     AS STUDY_ID
             , A.ID           AS STUDY_MEMBER_ID
             , A.MEMBER_ID    AS MEMBER_ID
             , B.NICKNAME     AS STUDY_MEMBER_NICKNAME
             , C.`NAME`       AS STUDY_MEMBER_RANK
             , A.`ROLE`       AS STUDY_MEMBER_ROLE
        FROM STUDY_MEMBER A
                 JOIN MEMBER B       ON A.MEMBER_ID = B.ID
                 JOIN MEMBER_RANK C  ON B.RANK_ID   = C.ID
        WHERE A.STUDY_ID = #{studyId}
          AND A.`ROLE` != 'NOT_MEMBER'
        ORDER BY
            CASE WHEN A.`ROLE` = 'LEADER'
            THEN 0 ELSE 1 END,
               B.NICKNAME ASC
    </select>
</mapper>
