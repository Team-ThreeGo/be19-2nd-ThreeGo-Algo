<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.threego.algo.member.query.dao.AuthMapper">
    <!-- 이메일로 회원 정보 조회 -->
    <select id="selectMemberByEmail" resultType="com.threego.algo.member.query.dto.LoginUserResponseDTO">
        SELECT
               A.ID
             , A.EMAIL
             , A.PASSWORD
          FROM MEMBER A
         WHERE EMAIL = #{email}
    </select>
</mapper>