<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.threego.algomemberservice.member.query.dao.AuthMapper">
    <!-- 이메일로 회원 정보 조회 -->
    <select id="selectMemberByEmail" resultType="com.threego.algomemberservice.member.query.dto.LoginUserResponseDTO">
        SELECT
               A.ID
             , A.EMAIL
             , A.PASSWORD
          FROM MEMBER A
         WHERE EMAIL = #{email}
    </select>

    <select id="selectRolesByEmail" parameterType="string" resultType="com.threego.algomemberservice.member.command.domain.aggregate.Role">
        SELECT r.id, r.name, r.description
        FROM Member m
        JOIN Member_Role mr ON m.id = mr.member_id
        JOIN Role r ON mr.role_id = r.id
        WHERE m.email = #{email}
    </select>
</mapper>